<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FF4081"> <!-- Color de fondo del CardView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"> <!-- Centrar los elementos verticalmente -->

        <!-- Aquí van tus elementos de diseño, como TextView, ImageView, etc. -->
        <TextView
            android:id="@+id/gameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textColor="#FFFFFF" /> <!-- Color del texto -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
